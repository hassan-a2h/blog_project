
<h3> <%= post.title %> </h3>
<p> <%= post.body %> </p>

<%# Only show like button and like count if the user is signed in. %>
<% if user_signed_in? %>
  <%= link_to "Like", new_post_like_path(post) %> (<%= post.likes.count %>)
<% end %>

<%= link_to "Comments", post_comments_path(post) %>
<%= link_to "Suggestions", post_suggestions_path(post) %>
<%= link_to "Show Post", post_path(post) %>
<%= link_to "Report Post", new_post_report_path(post) %>

<hr>
