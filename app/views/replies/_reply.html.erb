<h5> User: <%= reply.user.user_name %> </h5>
<p> <%= reply.body %> </p>

<% if reply.user_id == current_user.id || current_user.role_mod? || current_user.role_admin? %>
  <%= link_to "Delete", reply_path(reply), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>

<% end %>

